<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="0"
        android:gravity="end"
        android:layout_column="0"
        android:textSize="50sp"

        android:background="@drawable/shape"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="角度"
            android:checked="true"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="弧度"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="梯度"
            >
        </RadioButton>
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="SIN"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="COS"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="TAN"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="COT"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="ASIN"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="ACOS"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="ATAN"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="ACOT"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="SINH"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="COSH"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="TANH"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="COTH"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="ASINH"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="ACOSH"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="ATANH"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="ACOTH"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="LN"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="LOG10"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="N!"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="X^Y"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="E^X"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="Π"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="("
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text=")"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="退格"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="清除"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="±"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="+"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="7"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
