        <Button
            style="@style/ButtonStyle"
            android:text="4"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="5"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="6"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="*"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="1"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="2"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="3"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="/"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow>
        <Button
            style="@style/ButtonStyle"
            android:text="0"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="."
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="1/X"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="="
            android:layout_column="3"
            />
    </TableRow>
</TableLayout>