<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/shape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:gravity="end"
        android:layout_column="0"
        android:textSize="50sp"

        android:background="@drawable/shape"/>
    <TableRow
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >
        <Button
            style="@style/ButtonStyle"
            android:text="退格"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="清除"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="±"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="+"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow

        android:layout_marginHorizontal="10dp"
        >
        <Button
            style="@style/ButtonStyle"
            android:text="7"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="8"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="9"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="-"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="10dp">
        <Button
            style="@style/ButtonStyle"
            android:text="4"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="5"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="6"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="*"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="10dp">
        <Button
            style="@style/ButtonStyle"
            android:text="1"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="2"
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="3"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="/"
            android:layout_column="3"
            />
    </TableRow>
    <TableRow
        android:layout_marginHorizontal="10dp">
        <Button
            style="@style/ButtonStyle"
            android:text="0"
            android:layout_column="0"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="."
            android:layout_column="1"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="1/X"
            android:layout_column="2"
            />
        <Button
            style="@style/ButtonStyle"
            android:text="="
            android:layout_column="3"
            />
    </TableRow>




</TableLayout>